@require './config'

$mobileSidebarWidth = 80%

// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .sidebar
    //font-size 0.5rem
    width $sidebarWidth
  .page
    padding-left $sidebarWidth

// wide mobile
@media (max-width: $MQMobile)
  .sidebar
    font-size 1rem
    width $mobileSidebarWidth
    top 0
    padding-top $navbarHeight
    transform translateX(-100%)
    transition transform .3s ease
  .page
    width: 100%
    padding-left 0
  .theme-container
    &.sidebar-open
      .sidebar
        transform translateX(0)
        box-shadow 200px 0 0 rgba(0, 0, 0, 0.5)
    &.no-navbar
      .sidebar
        padding-top: 0

// narrow mobile
@media (max-width: $MQMobileNarrow)
  h1
    font-size 1.9rem
  {$contentClass}
    div[class*="language-"]
      margin 0.85rem -1.5rem
      border-radius 0
